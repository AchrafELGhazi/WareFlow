# Database Configuration
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/wareflow"

# Server Configuration
PORT=5000
NODE_ENV=development  # Options: development, production, test

# Client Web Application URL
WEB_URL=http://localhost:3000

# Authentication
# JWT Secret (Keep this secure in production!)
# You should generate a strong random string for production
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRES_IN=24h  # Format: 10s, 5m, 24h, 7d, etc.

# Admin Configuration
ADMIN_EMAIL=admin@example.com  # This email will receive admin privileges when registering